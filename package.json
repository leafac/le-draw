{
  "scripts": {
    "prepare": "tsc && build && node ./build/renderer.mjs",
    "start": "nodemon --watch \"./package.json\" --watch \"./tsconfig.json\" --watch \"./source/\" --watch \"./static/\" --ext \"*\" --exec \"npm run prepare && electron ./build/main.mts\"",
    "test": "npm run prepare && prettier --check \"./package.json\" \"./tsconfig.json\" \"./source/\""
  },
  "devDependencies": {
    "@radically-straightforward/development": "^1.0.50",
    "@radically-straightforward/production": "^1.0.34",
    "electron": "^34.1.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "prettier": {}
}
